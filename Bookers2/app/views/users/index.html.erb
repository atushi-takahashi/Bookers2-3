<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'books/side', user:@user, book:@book %>
		</div>
		<div class="col-xs-9">
			<h2>Users</h2>
			<table class="table table-hover">
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th></th>
					</tr>
				</thead>
				<% @users.each do |users| %>
					<tbody>
						<tr>
							<td>
								 <%= attachment_image_tag users, :profile_image, :fill, 50, 50, fallback: "noimage.jpg" %>
							</td>
							<td><%= users.name %></td>
							<td>
								<%= link_to "Show", user_path(users) %>
							</td>
						</tr>
					</tbody>
				<% end %>
			</table>
		</div>
	</div>
</div>